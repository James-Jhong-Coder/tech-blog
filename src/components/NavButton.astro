---
interface Props {
    isActive?: boolean;
    class?: string;
    href?: string;
}

const {
    isActive = false,
    class: className = "",
    href = "/",
} = Astro.props as Props;
---

<a href={href} class={`nav-btn ${className} ${isActive ? "is-active" : ""}`}>
    <slot />
</a>

<style>
    @reference "../styles/global.css";
    .nav-btn {
        @apply inline-flex items-center cursor-pointer leading-none text-sm;
        @apply py-2 px-2.5 rounded-md;
        color: var(--color-text-secondary);
        transition: all 0.2s;
    }
    .nav-btn:hover {
        background-color: rgba(0, 0, 0, 0.05);
        color: var(--color-text-primary);
    }

    .is-active {
        color: var(--color-accent);
        background-color: rgba(211, 54, 130, 0.1);
    }
    .is-active:hover {
        background-color: rgba(211, 54, 130, 0.15);
        color: var(--color-accent);
    }
</style>
