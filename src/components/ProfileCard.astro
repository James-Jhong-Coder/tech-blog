---
interface Props {
    class?: string;
}
const { class: className = "" } = Astro.props as Props;
---

<div class={`card ${className}`}>
    <slot />
</div>

<style>
    @reference "../styles/global.css";
    .card {
        background: linear-gradient(180deg, #f5efe0 0%, #eee8d5 100%);
        @apply p-12 rounded-2xl text-text-primary;
    }
</style>
