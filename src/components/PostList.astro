---
import PostListItem from "@/components/PostListItem.astro";
import { getCollection } from "astro:content";
interface Props {
  class?: string;
  tag?: string;
  category?: string;
  limit?: number;
}
const { class: className, tag, category, limit } = Astro.props as Props;

const posts = await getCollection("posts", ({ data }) => !data.draft);

let filteredPosts = (() => {
  let result = posts;
  if (tag) {
    result = result.filter((post) =>
      post.data.tags.some((postTag) => postTag === tag)
    );
  }
  if (category) {
    result = result.filter((post) => post.data.category === category);
  }
  const sorted = result.sort((a, b) => new Date(b.data.createDate).getTime() - new Date(a.data.createDate).getTime());
  return limit ? sorted.slice(0, limit) : sorted;
})();
---

<div class={`post-list ${className ?? ""}`}>
  {
    filteredPosts.map((post) => (
      <a href={`/posts/${post.id}`}>
        <PostListItem
          title={post.data.title}
          description={post.data.description}
          tags={post.data.tags}
          createDate={post.data.createDate}
        />
      </a>
    ))
  }
</div>

<style>
  @reference "../styles/global.css";
  .post-list {
    @apply flex flex-col;
  }
</style>
