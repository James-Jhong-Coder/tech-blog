---
import PostListItem from "@/components/PostListItem.astro";
import { getCollection } from "astro:content";
interface Props {
  class?: string;
  tag?: string;
  category?: string;
  limit?: number;
}
const { class: className, tag, category, limit } = Astro.props as Props;

const posts = await getCollection("posts", ({ data }) => !data.draft);
// console.log('posts = ', posts)
let filteredPosts = (() => {
  console.log("tag = ", tag);
  console.log("category = ", category);

  let result = posts;
  if (tag) {
    console.log("enter-1");
    result = result.filter((post) =>
      post.data.tags.some((postTag) => postTag === tag),
    );
  }
  if (category) {
    console.log("enter-2");
    result = result.filter((post) => {
      console.log("post.data.category = ", post.data.title, post.data.category);
      return post.data.category === category;
    });
  }
  const sorted = result.sort(
    (a, b) =>
      new Date(b.data.createDate).getTime() -
      new Date(a.data.createDate).getTime(),
  );
  return limit ? sorted.slice(0, limit) : sorted;
})();
// console.log("filteredPosts = ", filteredPosts);
---

<div class={`post-list ${className ?? ""}`}>
  {
    filteredPosts.map((post) => (
      <a href={`/posts/${post.id}`}>
        <PostListItem
          title={post.data.title}
          description={post.data.description}
          tags={post.data.tags}
          createDate={post.data.createDate}
        />
      </a>
    ))
  }
</div>

<style>
  @reference "../styles/global.css";
  .post-list {
    @apply flex flex-col;
  }
</style>
