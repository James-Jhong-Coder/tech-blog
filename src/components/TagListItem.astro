---
import IconTags from "@/assets/icons/icon_tag.svg";
interface Props {
  id?: string;
  title?: string;
  class?: string;
}

const { class: className, title } = Astro.props as Props;
---

<a href={`/tags/${title}`} class={`tag-item ${className ?? ""}`}>
  <IconTags />
  <span class="ml-2">{title}</span>
</a>

<style>
  @reference "../styles/global.css";
  .tag-item {
    @apply flex items-center leading-none px-3 py-3;
    @apply rounded-lg cursor-pointer;
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    transition: all 0.2s;
  }
  .tag-item:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
    background-color: rgba(211, 54, 130, 0.05);
  }
</style>
