---
const { class: className, ...rest } = Astro.props;
import Logo from "@/assets/icons/logo.svg";
import NavButton from "@components/NavButton.astro";
import IconHome from "@/assets/icons/icon_home.svg";
import IconPerson from "@/assets/icons/icon_person.svg";
import IconTag from "@/assets/icons/icon_tag.svg";
import IconCode from "@/assets/icons/icon_code.svg";
import IconCoffee from "@/assets/icons/icon_coffee.svg";
const currentPath = Astro.url.pathname;
---

<header class:list={["header-box", className]} {...rest}>
  <div class="content">
    <div class="logo-box">
      <a href="/" aria-label="回首頁">
        <Logo class="cursor-pointer" />
      </a>
    </div>
    <div class="ml-auto flex items-center">
      <NavButton href="/" isActive={currentPath === "/"}>
        <IconHome class="mr-1 w-4 h-4 shrink-0" />
        <span>首頁</span>
      </NavButton>
      <NavButton class="ml-2" href="/categories/tech" isActive={currentPath.startsWith("/categories/tech")}>
        <IconCode class="mr-1 w-4 h-4" />
        <span>技術</span>
      </NavButton>
      <NavButton class="ml-2" href="/categories/life" isActive={currentPath.startsWith("/categories/life")}>
        <IconCoffee class="mr-1 w-4 h-4" />
        <span>生活</span>
      </NavButton>
      <NavButton class="ml-2" href="/tags" isActive={currentPath === "/tags"}>
        <IconTag class="mr-1 w-4 h-4" />
        <span>標籤</span>
      </NavButton>
      <NavButton class="ml-2" href="/about" isActive={currentPath === "/about"}>
        <IconPerson class="mr-1 w-4 h-4" />
        <span>關於</span>
      </NavButton>
    </div>
  </div>
  <span class="bottom-line"></span>
</header>
<style>
  @reference "../styles/global.css";

  .header-box {
    @apply grid;
    grid-template-rows: 1fr 1px;
    grid-template-columns: 1fr;
  }
  .content {
    @apply flex items-center;
    @apply px-3;
    @apply max-w-screen-lg w-full mx-auto;
  }
  .logo-box {
    @apply flex items-center;
  }
  .logo {
  }
  .menus {
    @apply ml-auto;
  }
  .bottom-line {
    @apply h-px w-full;
    background-color: var(--color-border);
  }
</style>
