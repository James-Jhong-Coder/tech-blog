---
import IconArrowRight from "@/assets/icons/icon_arrow_right.svg";

interface Props {
  href?: string;
  label?: string;
}
const { href = "/posts", label = "查看全部文章" } = Astro.props as Props;
---

<a href={href} class="btn">
  <span>{label}</span>
  <IconArrowRight class="icon ml-1.5" />
</a>

<style>
  @reference "../styles/global.css";

  .btn {
    @apply flex items-center;
    @apply leading-none cursor-pointer text-sm;
    @apply rounded-lg py-1.5 px-3;
    color: var(--color-accent);
    border: 1px solid var(--color-border-light);
    transition: all 0.2s ease;
  }
  .btn:hover {
    background-color: rgba(211, 54, 130, 0.08);
    border-color: var(--color-accent);
  }
  .btn .icon {
    @apply w-4 h-4;
    transition: transform 0.2s ease;
  }
  .btn:hover .icon {
    transform: translateX(3px);
  }
</style>
