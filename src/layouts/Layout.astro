---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import '@/styles/global.css';
---

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>James blog</title>
  </head>
  <body>
    <section class='page'>
      <Header class='header' />
      <main class='content'>
        <slot />
      </main>
      <Footer />
    </section>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<style>
  @reference "../styles/global.css";

  .page {
    @apply h-full relative;
    @apply grid;
    grid-template-rows: 1fr max-content;
  }
  .header {
    @apply fixed top-0 left-0 right-0 z-40 h-16;
    backdrop-filter: blur(8px); /* 或 Tailwind 的 backdrop-blur-sm/md/lg */
    background-color: rgba(255, 255, 255, 0.7); /* 半透明底色，常用白色/黑色 */
  }

  /* 留出 header 的高度，避免內容被擋住 */
  .content {
    @apply pt-16 pb-8;
    @apply flex flex-col;
    @apply px-3;
    @apply max-w-screen-lg w-full mx-auto;
  }
</style>
